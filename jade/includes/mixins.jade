mixin grupos-cards(src, alt, title, clase, text)
	div.card
		img(src=src alt=alt) 
		h4= title
		p= text
		a(class=clase) Consultar
		
		
		
		
//- ----------------------------
//- ---------------------------- Lo nuevo cards ------------------------------- //
//- ----------------------------
mixin lo-nuevo-cards(src, alt, title, link, txtbtn)
	div.card
		img(src=src alt=alt) 
		h2= title
		a(href=link target="_blank")= txtbtn
			





